                        {#</div>#}
                        {{ form_widget(form) }}
                        <div>
                            <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-success"/>
                            <a href="{{ path('fos_user_profile_show') }}" class="btn btn-danger"> annuler</a>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            <br>
        </div>
    </div>
{{ form_end(form) }}


