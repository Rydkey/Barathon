    <div class="row-fluid">
        <div class="col-lg-12">
            <br>
            <div class="container">
                <h1>Modifier le profil</h1>
                <hr>
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-3">
                        <div class="text-center">
                            <img src="{{ asset(app.user.WebPath)}}" class="avatar img-circle" alt="avatar" style="width: 250px;height: 250px">
