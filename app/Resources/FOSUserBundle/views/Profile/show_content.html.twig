{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="well">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <img src="{{ asset(user.WebPath) }}" class="img-rounded img-responsive" style="height:120px; width:300px">
                    </div>
                    <div class="col-sm-6 col-md-8">
                        <h4>
                            {{ user.prenom }} {{ user.nom }}</h4>
                        <small><cite title="San Francisco, USA"> {{ user.ville }} <i class="glyphicon glyphicon-map-marker">
                                </i></cite></small>
                        <p>
                            <i class="glyphicon glyphicon-envelope"></i> {{ user.email }}
                            <br />
                            <i class="glyphicon glyphicon-gift"></i>{{ user.anniversaire|date('d/m/Y') }}</p>
                        <!-- Split button -->
                        <div class="btn-group">
                            <button type="button" class="btn btn-primary">
                                Actions</button>
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span><span class="sr-only">Actions</span>
                            </button>
                            <ul class="dropdown-menu dropdown">
                                <li><a href="{{ path('fos_user_profile_edit') }}">Modifier le profil</a></li>
                                <li><a href="{{ path('fos_user_change_password') }}">Changer de mot de passe</a></li>
                                <li><a href="{{ path('fos_user_security_logout') }}">déconnexion</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{% if not app.user.events.empty %}
    <p>
        inscrit dans les évènements suivant :
        {% for event in app.user.events %}
            {{ event.libelleEvent }}{% if not loop.last %}, {% endif %}
        {% endfor %}
    </p>
{% endif %}
