{% extends '::Utilisateurs/utilisateursLayout.html.twig' %}
{% block page %}
 {% if is_granted('ROLE_ADMIN') %}
    <h1>Liste des utilisateurs</h1>

    <table  class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
        {% if app.user.id != user.id %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.pays }}</td>
                <td>{{ user.ville }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">Modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">Afficher</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endif %}
        {% endfor %}
        </tbody>
    </table>
{% endif %}
{% endblock %}
